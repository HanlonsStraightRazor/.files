# Set status bar to current date and time
while true; do
  xsetroot -name " $(date "+%a %d %b %Y %H:%M %Z") "
  sleep 5s
done &

# Set background
nitrogen --restore &

# Allows transparency
xcompmgr -c &

# Hides mouse after 3 seconds of inactivity
unclutter --timeout 3 &

# Start dynamic window manager
exec dwm
