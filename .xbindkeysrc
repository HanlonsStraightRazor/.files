# Toggle wireless
"if [ `ip link show wlp4s0 | cut -d ' ' -f 9` == 'UP' ]; then sudo ip link set wlp4s0 down; else sudo ip link set wlp4s0 up; fi"
  Control + F2

# Volume
"amixer set Master toggle"
  Control + F3
"amixer set Master 2%-"
  Control + F4
"amixer set Master 2%+"
  Control + F5

# Screen brightness
"light -U 2"
  Control + F9
"light -A 2"
  Control + F10

# Screenshot
"screengrab -f"
  Control + Home


