# Start compositor (for transparency)
picom &

# Load .Xresources
xrdb ~/.Xresources

# Set random background image
feh --bg-fill --randomize $HOME/.wallpaper &

# Hides mouse after 3 seconds of inactivity
unclutter --timeout 3 &

# Start awesome window manager
exec awesome
